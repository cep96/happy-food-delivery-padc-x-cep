<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".activities.StartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/start_img"
        android:layout_marginBottom="@dimen/margin_medium_2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_upper_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy Meals"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_heading_2x"
            android:layout_marginStart="@dimen/margin_medium_2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_lbl_start_description"
            android:textSize="@dimen/text_regular_2x"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/margin_medium_2"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGetStarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_lbl_get_started"
            android:backgroundTint="@android:color/white"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            app:cornerRadius="@dimen/margin_medium_2"
            android:layout_marginStart="@dimen/margin_medium_2"
            android:paddingStart="@dimen/margin_xlarge"
            android:paddingEnd="@dimen/margin_xlarge"
            />

    </LinearLayout>

</LinearLayout>